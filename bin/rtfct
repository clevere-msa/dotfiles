#!/usr/bin/bash

trap "exit 1" TERM
export TOP_PID=$$

function fatal_error() {
    local progname=$(basename $0)
    printf "%s\n" "$progname: $*" >>/proc/self/fd/2
    kill -s TERM $TOP_PID
}

function get_artifactory_project_url() {
    local repo_nickname=$1

    if [ "$repo_nickname" = "airbp" ]; then
       echo "msa_airbp-generic-snapshot-local"
    elif [ "$repo_nickname" = "apps" ]; then
       echo "msa_apps-generic-snapshot-local"
    elif [ "$repo_nickname" = "authsys" ]; then
       echo "msa_-authsys-generic-snapshot-local"
    elif [ "$repo_nickname" = "branded" ]; then
       echo "msa_branded-generic-snapshot-local"
    elif [ "$repo_nickname" = "epic" ]; then
       echo "msa_airbp-generic-snapshot-local"
    elif [ "$repo_nickname" = "framework" ]; then
       echo "msa_framework-generic-snapshot-local"
    elif [ "$repo_nickname" = "msalib" ]; then
       echo "msa_libnix-generic-snapshot-local"
    elif [ "$repo_nickname" = "opsver" ]; then
       echo "msa_opsver-generic-snapshot-local"
    elif [ "$repo_nickname" = "pos" ]; then
       echo "msa_-pos-generic-snapshot-local"
    elif [ "$repo_nickname" = "pos-svcs" ]; then
       echo "msa_pos_services-generic-snapshot-local"
    elif [ "$repo_nickname" = "pos-services" ]; then
       echo "msa_pos_services-generic-snapshot-local"
    elif [ "$repo_nickname" = "pos_services" ]; then
       echo "msa_pos_services-generic-snapshot-local"
    elif [ "$repo_nickname" = "settlsys" ]; then
       echo "msa_settlsys-generic-snapshot-local"
    elif [ "$repo_nickname" = "shell" ]; then
       echo "msa_shell-generic-snapshot-local"
    elif [ "$repo_nickname" = "titan" ]; then
       echo "msa_shell-generic-snapshot-local"
    elif [ "$repo_nickname" = "tools" ]; then
       echo "msa_tools-generic-snapshot-local"
    else
       fatal_error "Unknown repo $repo_nickname"
    fi
}

CMD=$1
REPO=$(get_artifactory_project_url $2)

LC_USERNAME=$(echo ${LOGNAME} | tr "[:upper:]" "[:lower:]")
API_KEY=$(/home/$LC_USERNAME/bin/artifactory_api_key.sh)

CURL=/usr/bin/curl
ARTIFACTORY_URL="https://artifactory.us.bank-dns.com/artifactory"
CERT_FN=/etc/pki/tls/certs/usb_chain.pem

if [ $CMD == 'ls' ]
then
   URL="$ARTIFACTORY_URL/api/search/aql"
   echo "$CURL --cacert $CERT_FN -X POST -H \"X-JFrog-Art-Api:...\" -H \"content-type: text/plain\" --url $URL -d \"items.find({\"repo\":\"$REPO\"})\""
   $CURL --cacert $CERT_FN -X POST -H "X-JFrog-Art-Api:$API_KEY" -H "content-type: text/plain" --url $URL -d "items.find({\"repo\":\"$REPO\"})"
else 
    ZIP_FN=$3
    URL="$ARTIFACTORY_URL/$REPO/$ZIP_FN"
    if [ $CMD == 'put' ]
    then
        if [ ! -f  "$ZIP_FN" ]; then
            fatal_error "file '$ZIP_FN' not found"
        fi
        echo "$CURL --cacert $CERT_FN -H \"X-JFrog-Art-Api:...\" --upload-file $ZIP_FN --url $URL"
        $CURL --cacert $CERT_FN -H "X-JFrog-Art-Api:$API_KEY" --upload-file $ZIP_FN --url $URL
    elif [ $CMD == 'get' ]
    then
        echo "$CURL --cacert $CERT_FN -H \"X-JFrog-Art-Api: ...\" -O $URL"
        $CURL --cacert $CERT_FN -H "X-JFrog-Art-Api:$API_KEY" -O $URL
    else 
        echo "$0: unknown command '$CMD'"
    fi
fi
